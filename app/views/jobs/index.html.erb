<div>
  <span>
    Hello! You Can Register Jobs Here...
  </span>
  <%= form_with url: jobs_path, method: :post do |f| %>
    <%= f.label :name, "Job Name" %>
    <%= f.text_field :name %>
    <%= f.datetime_local_field("datetime") %>
    <%= f.submit "Add Job" %>
  <% end %>
  <div>
    <%= @scheduled_jobs.each do |job| %>
      <p>
        <%= "Job Class: #{job.args[0]['job_class']}" %>
        <%= "Job Name: #{job.args[0]['arguments']}" %>
        <%= "Created At: #{job.created_at}" %>
        <%= "Scheduled At: #{job.at}"%>
      </p>
    <% end %>
  </div>
</div>